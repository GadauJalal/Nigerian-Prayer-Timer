{
  "expo": {
    "name": "Prayer Times Nigeria",
    "slug": "app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/prayertimeslogo.jpeg",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/Prayerlogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.prayertimesnigeria.app",
      "buildNumber": "2",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to calculate accurate prayer times based on your current city.",
        "NSMotionUsageDescription": "This app uses your device's motion sensors and magnetometer to provide the Qibla compass functionality."
      }
    },
    "android": {
      "versionCode": 4,
      "adaptiveIcon": {
        "foregroundImage": "./assets/prayertimeslogo.jpeg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.prayertimesnigeria.app",
      "permissions": [
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM",
        "POST_NOTIFICATIONS"
      ],
      "blockedPermissions": [
        "android.permission.ACTIVITY_RECOGNITION",
        "com.google.android.gms.permission.ACTIVITY_RECOGNITION"
      ],
      "useNextNotificationsApi": true
    },
    "notification": {
      "icon": "./assets/prayertimeslogo.jpeg",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "Prayer Time"
    },
    "plugins": [
      "expo-dev-client",
      [
        "expo-notifications",
        {
          "icon": "./assets/prayertimeslogo.jpeg",
          "color": "#10B981",
          "sounds": [
            "./assets/adhan1.mp3",
            "./assets/adhan2.mp3",
            "./assets/adhan3.mp3"
          ],
          "mode": "production"
        }
      ],
      "expo-asset"
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "7eb17e2d-a628-4c72-b4a2-41b14f528321"
      }
    }
  }
}